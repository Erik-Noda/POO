package principal;

import java.awt.event.WindowAdapter;
import java.awt.event.WindowEvent;

public class NovaJanela extends javax.swing.JFrame {

    private static NovaJanela novaJanela;
    
    private NovaJanela() {
        initComponents();
    }
    
    public static NovaJanela iniciar(){
        if(novaJanela == null){
            novaJanela = new NovaJanela();
            novaJanela.addWindowListener(
                new WindowAdapter(){
                    public void windowClosing(WindowEvent e){
                        novaJanela = null;
                    }
                } 
            );
        }
        
        return novaJanela;
    }

